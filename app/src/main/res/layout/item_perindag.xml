<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:paddingStart="6dp"
    android:paddingEnd="6dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="6dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_background"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_margin="6dp"
            android:background="@drawable/bg_rounded_down"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_komuditas"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_trending_up_black_24dp"
                android:visibility="gone" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_komuditas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Komuditas"
                android:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textStyle="bold"
                app:autoSizeTextType="uniform" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform"
                android:text="Harga tertinggi di kabupaten"
                android:textColor="#000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@drawable/bg_rounded_up"
                android:padding="6dp"
                android:text="Rp. 18.000 / Kg"
                android:autoSizeTextType="uniform"
                app:autoSizeMinTextSize="10sp"
                app:autoSizeTextType="uniform"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>